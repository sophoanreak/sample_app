<%= form_for([@restaurant, @review]) do |f| %>
  <% if @review.errors.any? %>
    <div id="error_explanation" class="card blue-grey darken-1" >
		<div class="card-content white-text">
		  <h4><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h4>

		  <ul>
		  <% @review.errors.full_messages.each do |message| %>
			<li><%= message %></li>
		  <% end %>
		  </ul>
		</div>
    </div>
  <% end %>

  <div id="star-rating"></div>
  
  <div class="field">
    <%= f.label :comment %><br>
    <%= f.text_area :comment %>
  </div>
  <div class="actions">
    <%= f.submit class: "waves-effect waves-light btn" %>
  </div>
<% end %>

<script>
	$('#star-rating').raty({
		path: 'https://dl.dropboxusercontent.com/u/39722693',
		scoreName: 'review[rating]'
	});
</script>