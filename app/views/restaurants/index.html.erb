
<h1>Listing Restaurants</h1>

<table class="striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Website</th>
      <% if user_signed_in? && current_user.admin? %>
      	<th colspan="2"></th>
    	<% end %>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= link_to restaurant.name, restaurant %></td>
        <td><%= restaurant.address %></td>
        <td><%= link_to restaurant.website, "http://#{restaurant.website}" %></td>
        <% if user_signed_in? && current_user.admin? %>
	        <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
	        <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	    <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? && current_user.admin? %>
	<%= link_to 'New Restaurant', new_restaurant_path , :class => 'waves-effect waves-light btn' %>
<% end %>
